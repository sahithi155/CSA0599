 CREATE DATABASE labdb;

USE labdb;

CREATE TABLE student2 (RegNo INT, SIName VARCHAR(15), Age CHAR(2), MobileNo INT, address VARCHAR(15));

ALTER TABLE student2 ADD PRIMARY KEY(RegNo);

DESC student2;

CREATE TABLE faculty (Facno INT, FName CHAR(15), gender CHAR(1), DOB DATE, MobileNo INT, address VARCHAR(20));

ALTER TABLE faculty ADD PRIMARY KEY(Facno);

ALTER TABLE faculty ADD CHECK (gender IN ('M','F'));

DESC faculty;

CREATE TABLE department (deptno INT, dname CHAR(15), loc CHAR(10));

ALTER TABLE department ADD PRIMARY KEY(deptno);

DESC department;

CREATE TABLE course (cno INT, cname VARCHAR(15), semno INT, facno INT);

ALTER TABLE course ADD PRIMARY KEY(cno);

ALTER TABLE course ADD CHECK (semno >=1 AND semno <=6);

DESC course;

ALTER TABLE student2 ADD UNIQUE KEY(SIName);

DESC student2;

ALTER TABLE student2 MODIFY address VARCHAR(15) NOT NULL;

DESC student2;

SHOW TABLES;
